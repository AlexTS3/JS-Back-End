<main>
    {{#with recipie}}
    <h1>{{name}}</h1>
    <div class="foodImgDetails">
        <img src="{{imageUrl}}">
    </div>
    <div class="details">
        <p><span>Description:</span> {{description}}</p>
        <p><span>Difficulty level:</span> {{difficultyLevel}}</p>
        <div class="btns">
            <a class="btnBack" href="/">Back</a>
            <a class="btnEdit" href="/recipies/edit/{{_id}}">Edit</a>
            <a class="btnDel" href="/recipies/delete/{{_id}}">Delete</a>
        </div>
    </div>
    {{/with}}
</main>